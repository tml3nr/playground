# Maintainer: Mike Andonov <info@archphile.org>
# Website: http://archphile.org
# Based on mpd-minimal from AUR made by the following people:
# Maintainer: Bruno Pagani (a.k.a. ArchangeGabriel) <bruno.n.pagani at gmail dot com>

pkgname=mpd-archphile-minimal
_pkgname=mpd
pkgver=0.20.23
pkgrel=1
pkgdesc='Flexible, powerful, server-side application for playing music. Minimal version optimized for Archphile distribution.'
url='http://www.musicpd.org/'
license=('GPL')
arch=('armv7h' 'aarch64')
depends=('alsa-lib' 'libsndfile' 'flac' 'libsoxr' 'icu' 'libvorbis' 'libmad' 'curl' 'faad2' 'sqlite' 'libmms' 'libid3tag' 'libmpdclient' 'wavpack')
makedepends=('boost' 'doxygen')
provides=("mpd=$pkgver")
conflicts=('mpd' 'mpd-archphile-sacd' 'mpd-archphile-native-dsd')
replaces=('mpd')
source=("https://www.musicpd.org/download/${_pkgname}/0.20/${_pkgname}-${pkgver}.tar.xz"
        'tmpfiles.d'
	'sysusers.d'
	'mpd.conf')
sha256sums=('503e5f9f237290f568ff7956ab2f9aed563594bf749f19b8fe994fb21434afea'
            '4e20576ea53141fc398f8e586f30bdf06a404ca099db037724ef80f15c7f2ea3'
            '0b74c6e5db08daab3091dc15a6b0c75210ba2f9e98fa074f6cfd605a461056b6'
            '2f100fef24a1d60f4639c76aa76b737a87939fd2f8d799a31e613f1b3602d5ed')
backup=('etc/mpd.conf')

build() {
	cd "${srcdir}/${_pkgname}-${pkgver}"

	./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--enable-pipe-output \
	--enable-libmpdclient \
	--enable-alsa \
	--enable-mad \
	--enable-aac \
	--enable-vorbis \
	--enable-curl \
	--enable-mms \
	--enable-id3 \
	--enable-tcp \
	--enable-largefile \
	--enable-sndfile \
	--enable-soxr \
	--enable-wavpack \
	--disable-libwrap \
	--disable-ao \
   	--disable-httpd-output \
    	--disable-jack \
    	--disable-openal \
    	--disable-oss \
    	--disable-pulse \
    	--disable-recorder-output \
    	--disable-roar \
    	--disable-shout \
    	--disable-adplug \
    	--disable-audiofile \
    	--disable-ffmpeg \
    	--disable-fluidsynth \
    	--disable-gme \
    	--disable-mikmod \
    	--disable-modplug \
    	--disable-mpg123 \
   	--disable-opus \
    	--disable-sidplay \
    	--disable-wildmidi \
    	--disable-expat \
    	--disable-ipv6 \
    	--disable-nfs \
    	--disable-smbclient \
    	--disable-soundcloud \
   	--disable-upnp \
    	--disable-bzip2 \
    	--disable-iso9660 \
    	--disable-zlib \
    	--disable-zzip \
    	--disable-cdio-paranoia \
    	--disable-lsr \
    	--disable-lame-encoder \
    	--disable-shine-encoder \
    	--disable-twolame-encoder \
    	--disable-vorbis-encoder \
    	--disable-wave-encoder \
    	--disable-neighbor-plugins \
    	--with-zeroconf=no \
	--with-systemduserunitdir=/usr/lib/systemd/user \
    	--with-systemdsystemunitdir=/usr/lib/systemd/system

	make
}

package() {
	cd "${srcdir}/${_pkgname}-${pkgver}"
	
	make DESTDIR="${pkgdir}" install
	install -Dm644 ../mpd.conf "${pkgdir}"/etc/mpd.conf
	install -Dm644 ../tmpfiles.d "${pkgdir}"/usr/lib/tmpfiles.d/mpd.conf
	install -Dm644 ../sysusers.d "${pkgdir}"/usr/lib/sysusers.d/mpd.conf

	install -Dm644 "${pkgdir}"/usr/lib/systemd/{system,user}/mpd.service
	sed '/WantedBy=/c WantedBy=default.target' -i "${pkgdir}"/usr/lib/systemd/{system,user}/mpd.service
        sed '/ExecStart=/c ExecStart=/usr/bin/nice -n -16 /usr/bin/mpd --no-daemon' -i "${pkgdir}"/usr/lib/systemd/{system,user}/mpd.service

}
